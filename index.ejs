                            console.log(err);
                            //toastr.warning(err.responseJSON.message);
                        }
                    });
                }

                function getGoodsByWeather(weather_type) {
                    $.ajax({
                        type: 'GET',
                        url: BASE_URL + "API/weather_goods",
                        data: {
                            data: weather_type
                        },
                        timeout: 2000,
                        success: function(data) {
