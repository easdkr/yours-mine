                        }
                    });
                }

                function getAllGoods() {
                    $.ajax({
                        type: 'GET',
                        url: BASE_URL + "API/goods",
                        timeout: 2000,
                        success: function(data) {
                            ViewGoodslist(data);
                        },
                        error: function(err) {
