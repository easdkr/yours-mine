                function getGoodsByGoodsType(goods_type) {
                    $.ajax({
                        type: 'GET',
                        url: BASE_URL + "API/type_goods",
                        data: {
                            data: goods_type
                        },
                        timeout: 2000,
                        success: function(data) {
                            ViewGoodslist(data);
                        },
